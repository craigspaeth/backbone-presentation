@import url(type.css) 
@import 'node_modules/nib/index'

purple = #6B03CE

// Global styles
html
  height 100% 
  width 100%

body
  background-color #fff 
  background-repeat no-repeat 
  background-position center center 
  color #000 
  overflow hidden 
  -webkit-perspective 1000px 
  display -webkit-box 
  -webkit-box-pack center 
  -webkit-box-align center 
  width 100% 
  height 100% 
  font-family 'AdobeGaramondProRegular', serif 
  
  // Generic element styles
  a, a:visited
    color purple
    text-decoration none 
  a:hover, a:visited:hover
    color purple
    border-bottom 1px solid
  
  h1
    border-bottom 1px solid #000 
    float left 
    font-size 26px 
    font-weight normal 
    margin 0
  .purple
    color purple
  
  // Background
  .bg
    position absolute 
    z-index 7 
    height 100% 
    width 100%
    
  // Stage
  .stage
    height 675px 
    height 100% 
    margin 0 
    padding 0 
    position relative 
    -webkit-transform-style preserve-3d 
    z-index 8 
    width 1150px 
    width 100%

.twitter
  position fixed
  bottom 0
  left 0
  padding 50px
  font-size 24px

.table_flip
  height 150px
  display block
  float left
  line-height 150px
  margin-right 30px

// Footer
footer
  position absolute 
  bottom 0 
  text-align center 
  width 100% 
  z-index 10 
  p
    float left 

// Generic Slide styles
.off-stage
  display none
.slide
  background-color transparent 
  color #000 
  box-shadow none 
  font-size 50px 
  height 675px 
  height 100% 
  padding 50px 
  position absolute 
  width 1150px 
  width 100% 
  box-orient vertical 
  box-sizing border-box 
  transition -webkit-transform 0.8s ease-in-out, opacity 1.2s ease-in-out
  h1
    letter-spacing 3px
    text-transform uppercase 
    margin-bottom 1em
  
  // List styles
  ul
    clear both
    margin 0
    padding 0
    font-size 50px
    line-height 2em 
    
    &.arrows
      list-style none
    	margin-left 0
    	padding-left 1em 
    	text-indent -1em 
      li:before
      	content "\00BB \0020"
    
    &.small
      font-size 15px
  
    &.column-12
      column-count 12
      
// Centered contents
h1.centered
  text-align center
.centered
  display -webkit-box 
  box-pack center 
  box-align center
  margin-top -10%
  &.filled
    margin-top 0
  h1
    float none 
    margin-bottom 50px

// Code
span.code
  display inline-block
  margin-right 10px
.code
  background-color #fff
  border 2px so
  font-family courier
  padding 0px 20px
  border 4px solid
  margin 10px 0
  font-size 26px

// Transitions
.far-past
  opacity 0 
  -webkit-transform translateZ(-600px) rotateY(-180deg) translateZ(600px) 
  -webkit-backface-visibility hidden 

.past
  opacity 0 
  -webkit-transform translateZ(-600px) rotateX(-90deg) translateZ(600px) 
  -webkit-backface-visibility hidden 

.past-alt
  opacity 0 
  -webkit-transform translateZ(-600px) rotateX(-90deg) translateZ(600px) 
  -webkit-backface-visibility hidden 

.current
  opacity 1 
  -webkit-transform translateZ(-600px) rotateY(0deg) translateZ(600px) 
  -webkit-backface-visibility hidden 

.future
  opacity 0 
  -webkit-transform translateZ(-600px) rotateY(90deg) translateZ(600px) 
  -webkit-backface-visibility hidden 

.future-alt
  opacity 0 
  -webkit-transform translateZ(-600px) rotateX(90deg) translateZ(600px) 
  -webkit-backface-visibility hidden 

.far-future
  opacity 0 
  -webkit-transform translateZ(-600px) rotateY(180deg) translateZ(600px) 
  -webkit-backface-visibility hidden 


 // Title Slides 
.title
  background-color purple
  color #fff 

.title h1
  border-bottom none 
  font-size 70px 
  text-transform none 

.title .col
  float left 
  height 100% 
  width 700px 

.title .artsy_logo
  float left 
  margin-right 155px 
  width auto 

.title .by
  float left 
  list-style none 
  list-style-position inside 
  margin 0 
  padding 0 
  position absolute 
  bottom 50px 

.title .by li
  float left 
  margin 0 
  margin-right 100px 
  list-style none 

.title .by li p
  font-size 30px 
  line-height 38px 
  margin 0 

